<head>
  <link rel="stylesheet" type="text/css" href="/css/form.css" />
  <link rel="stylesheet" type="text/css" href="/css/main.css" />
  <title>Add Trainee</title>
</head>
<body>
  <header>
    <div class="container">
      <h1 class="logo">Hello, <%=name%></h1>
      <nav>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/addtrainee">Add Trainee</a></li>
          <li><a href="/searchtrainee">Search Trainee</a></li>
          <li><a href="/getresult">Get Result</a></li>
          <li><a href="/logout">Log out</a></li>
        </ul>
      </nav>
    </div>
  </header>
  <% if (check == "0") { %>
  <p class="warning">There are some error, please input again.</p>
  <% } %> <% if (check == "1") { %>
  <p class="success">The trainee is successfully added.</p>
  <% } %>
  <form method="POST">
    <ul class="form-style-1">
      <li>
        <label class="divided-label">SSN<span class="required">*</span></label>
        <label class="divided-label">Company ID</label>
        <input type="text" name="SSN" class="field-divided" />

        <input type="text" name="company_id" class="field-divided" />
      </li>
      <li>
        <label>Full Name <span class="required">*</span></label
        ><input
          type="text"
          name="Fname"
          class="field-divided"
          placeholder="First"
        />
        <input
          type="text"
          name="Lname"
          class="field-divided"
          placeholder="Last"
        />
      </li>
      <li>
        <label>Photo </label>
        <input type="url" name="photo" class="field-long" />
      </li>
      <li>
        <label>Address</label>
        <input type="text" name="address" class="field-long" />
      </li>
      <li>
        <label class="divided-label">Date of birth </label>
        <label class="divided-label"
          >Phone<span class="required">*</span></label
        >
        <input type="date" name="DoB" class="field-divided" />

        <input type="text" name="phone" class="field-divided" />
      </li>
      <li>
        <input type="submit" value="Submit" />
      </li>
    </ul>
  </form>
</body>
